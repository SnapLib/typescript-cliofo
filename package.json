{
  "name": "@snaplib/cliofo",
  "version": "0.0.1",
  "description": "Command line interface argument parser built around the concept of a prefix character, operands, flags, and options.",
  "main": "./build/dist/cliofo.js",
  "author": "Snap",
  "license": "MIT",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "build": "tsc --removeComments true --skipLibCheck true --declarationMap true --sourceMap true -p ./tsconfig.json --outDir ./build/dev --declarationDir ./build/dev/types",
    "build-dist": "tsc --declarationMap false --sourceMap false -p ./tsconfig.json --outDir ./build/dist --declarationDir ./build/dist/types",
    "build-scripts": "tsc -p ./scripts/ts/tsconfig.json --outDir ./scripts",
    "build-tsdoc": "typedoc --options ./typedoc.json",
    "clean": "node ./scripts/remove.js --directory ./build",
    "test": "env TS_NODE_PROJECT='./src/test/tsconfig.json' mocha --config ./src/test/.mocharc.cjs"
  },
  "keywords": [
    "cli",
    "command",
    "line",
    "interface",
    "snaplib",
    "operand",
    "option",
    "options",
    "flag",
    "flags",
    "parse",
    "parser",
    "argument",
    "arguments"
  ],
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "chai": "^4.3.7",
    "eslint": "^8.33.0",
    "mocha": "^10.2.0",
    "mochawesome": "^7.1.3",
    "ts-node": "^10.9.1",
    "typedoc": "^0.23.24",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "tslib": "^2.5.0"
  }
}
